<% if @movement.errors.any? %>
<ul>
	<% @movement.errors.full_messages.each do |mensajes|%>
	<li><%= mensajes%></li>
	<% end %>
</ul>
<% end %> 
<%= form_for @movement do |f| %>
<%= f.label "Movimiento a realizar" %>
<%= f.collection_select :movement_catalogs_id, MovementCatalog.order(:id),:id,:name, include_blank: true %>
<br />
<%= f.label "Cantidad" %>
<%= f.text_field :quantity %>
<br />
<%= f.submit "Guardar"%>

<% end %>